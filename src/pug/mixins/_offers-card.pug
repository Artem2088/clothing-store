include ../mixins/_image
include ../mixins/_title

mixin offersCard(offers, i)
    li.current
        a(href='#' class='current__link')
        div.current__wrapp
            if offers.tags
                .current__tags-wrap
                    if offers.tags
                        if (offers.tags == 'Продано')
                            span.current__tags.current__tags_sold= offers.tags
                        else
                            span.current__tags= offers.tags
                    else
                    .current__like-wrap
                        button.current__like-btn
                            <svg width="22" height="20" viewBox="0 0 22 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M10.9932 3.13581C8.9938 0.7984 5.65975 0.169643 3.15469 2.31001C0.649644 4.45038 0.296968 8.02898 2.2642 10.5604C3.89982 12.6651 8.84977 17.1041 10.4721 18.5408C10.6536 18.7016 10.7444 18.7819 10.8502 18.8135C10.9426 18.8411 11.0437 18.8411 11.1361 18.8135C11.2419 18.7819 11.3327 18.7016 11.5142 18.5408C13.1365 17.1041 18.0865 12.6651 19.7221 10.5604C21.6893 8.02898 21.3797 4.42787 18.8316 2.31001C16.2835 0.192157 12.9925 0.7984 10.9932 3.13581Z" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        .current__item-like
                            span=offers['qty-like']
            else
                .current__tags-wrap.current__tags-wrap_empty
                    if offers.tags
                        span.current__tags= offers.tags
                    else
                    .current__like-wrap
                        button.current__like-btn
                            <svg width="22" height="20" viewBox="0 0 22 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M10.9932 3.13581C8.9938 0.7984 5.65975 0.169643 3.15469 2.31001C0.649644 4.45038 0.296968 8.02898 2.2642 10.5604C3.89982 12.6651 8.84977 17.1041 10.4721 18.5408C10.6536 18.7016 10.7444 18.7819 10.8502 18.8135C10.9426 18.8411 11.0437 18.8411 11.1361 18.8135C11.2419 18.7819 11.3327 18.7016 11.5142 18.5408C13.1365 17.1041 18.0865 12.6651 19.7221 10.5604C21.6893 8.02898 21.3797 4.42787 18.8316 2.31001C16.2835 0.192157 12.9925 0.7984 10.9932 3.13581Z" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        .current__item-like
                            span=offers['qty-like']
            if (offers.tags == 'Продано')
                +image(offers.image, 200, 270, 'current__item-img current__item-img_sold')
            else
                +image(offers.image, 200, 270, 'current__item-img')
            if (offers.condition === null)
                .current__item-info
                    +title('h4', offers.title, 'current__item-title')
                    span.current__item-type=offers.type
                    .current__hover-btn-wrapp
                        button.link-button.current__hover-button= 'подробнее'
            else
                .current__item-info
                    if (offers.tags == 'Продано')
                        +title('h4', offers.title, 'current__item-title current__item-title_sold')
                        span.current__item-type.current__item-type_sold=offers.type
                        span.current__item-condition=offers.condition
                        .current__item-price
                            span.current__item-price-current.current__item-price-current_sold=offers['price-current']
                            if offers['price-old']
                                span.current__item-price-old=offers['price-old']
                        .current__hover-btn-wrapp
                            button.link-button.current__hover-button= 'подробнее'
                    else
                        +title('h4', offers.title, 'current__item-title')
                        span.current__item-type=offers.type
                        span.current__item-condition=offers.condition
                        .current__item-price
                            span.current__item-price-current=offers['price-current']
                            if offers['price-old']
                                span.current__item-price-old=offers['price-old']
                        .current__hover-btn-wrapp
                            button.link-button.current__hover-button= 'подробнее'

