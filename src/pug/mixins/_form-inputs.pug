mixin inputCheckbox(label, name, id, isRequired)
    .form-field.form-field--checkbox(class=`${isRequired ? 'required' : ''}`)&attributes(attributes)
        input.form-field__input(type='checkbox' name=`${name}` id=`${id}`)
        label.form-field__label(for=`${id}`)
            span
                svg(width='9px' height='7px' viewbox='0 0 12 9')
                    polyline(points='1 5 4 8 11 1')
            span #{label}



